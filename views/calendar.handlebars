<div class="parallax-container valign-wrapper">
    <div class="section no-pad-bot">
      <div class="container">
        <div class="dropdown">
        <i class="dropdown-trigger fa fa-bars fa-4x burger-menu" data-target='dropdown'></i>  
        <ul class="dropdown-content" id="dropdown">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
          </li>
          {{#if loggedIn}}
          <li class="nav-item">
            <a class="nav-link" href="/user">Profile</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Log Out</a>
          </li>
          {{else}}
          <li class="nav-item">
            <a class="nav-link" href="/login">Log In</a>
          </li>
          {{/if}}
        </ul>
      </div>
  <!-- ... -->
      <br><br>
      <h1 class="center white-text text-lighten-2">Star Scout</h1>
        <div class="row center">
          <h5 class="col s12 light flow-text exoFont">Discover your next trip by chasing the stars</h5>
        </div>
        <div class="section">
          <div class="row center">
            <div class="col s12 exoFont">
              <h4 class="flow-text upcoming header">List of All Events</h4>
              {{#each index}}
                <div class="card eventsCard horizontal">
                  <div class="card-image">
                    <img src="https://spaceholder.cc/250x350"> <!--when we get types into SQL set photos via unsplash to match type of event-->
                  </div>
                  <div class="card-stacked">
                    <div class="card-content">
                      <h5 class="card-title header">{{this.shower_name}} </h5>
                      <p><strong>Start Date</strong>: {{this.begin_date}}</p>
                      <p><strong>End Date</strong>: {{this.end_date}}</p>
                      <p><strong>Max Date</strong>: {{this.max_date}}</p>
                      <p><strong>Max Rate per Hour</strong>: {{this.max_rate_per_hour}}</p>
                    </div>
                    <div class="card-action">
                      <a href="/results/{{this.id}}"> Detailed Info</a>
                    </div>
                  </div>
                </div>
              {{/each}}
            </div>
          </div>
        </div>
      </div>
      <div class="parallax"><img src="/images/backgroundtest.jpeg" alt="Unsplashed background img 2"></div>
    </div>
  </div>

